<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ff34e8cb">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/customborder">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addLine1"
            android:gravity="center"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Address2"
            android:id="@+id/addLine2"
            android:gravity="center"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/cityold"
            android:text="City"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/stateold"
            android:text="State"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/countryold"
            android:text="Country"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/pinold"
            android:text="Pin"
            />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Send To this Address"
            android:clickable="true"
            android:onClick="orderplaced"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
        android:orientation="vertical"
        tools:context="com.example.zues.healthok.OrderPlace">

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:hint="ADDRESS LINE 1"
            android:id="@+id/houseno"
            android:layout_below="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:gravity="center"

            />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:hint="ADDRESS LINE 2"
            android:id="@+id/street"
            android:layout_below="@+id/street"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:gravity="center"

            />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:hint="CITY"
            android:id="@+id/city"
            android:layout_below="@+id/street"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:gravity="center"

            />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:hint="STATE"
            android:id="@+id/state"
            android:layout_below="@+id/city"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:gravity="center"

            />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:hint="COUNTRY"
            android:id="@+id/country"
            android:layout_below="@+id/state"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"

            />

        <com.beardedhen.androidbootstrap.BootstrapEditText
            android:hint="PIN"
            android:id="@+id/pin"
            android:layout_below="@+id/city"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:gravity="center"

            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/placeorder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Place Order"
            android:clickable="true"
            <!-- android:layout_below="@id/textfield" -!>
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            />


    </LinearLayout>

    </LinearLayout>
</ScrollView>