<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView21"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search22"/>


    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/editText"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            android:hint="Search doctor"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal" /> </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView15"
            android:layout_marginLeft="30dp"
            android:background="@drawable/general"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView16"
            android:layout_marginLeft="70dp"
            android:background="@drawable/ayur"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView17"
            android:layout_marginLeft="60dp"
            android:background="@drawable/cardiologist"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General Physician    Ayurveda          Cardiologist"
        android:id="@+id/textView15"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView25"
            android:layout_marginLeft="30dp"
            android:background="@drawable/ped"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView26"
            android:layout_marginLeft="70dp"
            android:background="@drawable/dentist"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView27"
            android:layout_marginLeft="60dp"
            android:background="@drawable/psy"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Pediatrician              Dentist            Psychiatrist"
        android:id="@+id/textView16"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView28"
            android:layout_marginLeft="30dp"
            android:background="@drawable/neu"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView29"
            android:layout_marginLeft="80dp"
            android:background="@drawable/ortho"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView30"
            android:layout_marginLeft="60dp"
            android:background="@drawable/optha"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Neurologist            Orthopedist     Ophthamologist"
        android:id="@+id/textView17"
        android:textSize="17dp
        "/>


</LinearLayout>
