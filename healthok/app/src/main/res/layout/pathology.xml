<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck8">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/camera_button"
            android:layout_marginTop="10dp"
            android:onClick="onClickCaptuteButton"
            android:background="@drawable/cameraicon"

            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ATTACH TEST SLIP"
                android:textColor="#A7B1FF"
                android:textSize="20dp"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Upload your test slip\n to book for test"
                android:id="@+id/textView7"
                android:textColor="#A7B1FF"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/captured_image"
            android:layout_weight="0.48"
            android:layout_marginLeft="20dp" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.91"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="20dp"
                android:textColor="#A7B1FF"
                android:layout_marginLeft="80dp"

                android:text="SELECT DATE OF TEST"

                android:textSize="20dp"
                android:id="@+id/textView5" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/datePicker"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SELECT TEST"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/drop_down_item"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"

                android:height="20dp"
                android:textColor="#A7B1FF" />

        </LinearLayout>
    </LinearLayout>

    <Spinner
        android:layout_width="206dp"
        android:layout_height="48dp"
        android:id="@+id/Test_spinner"
        android:layout_gravity="center_horizontal"
        android:background="#638fa6"

        android:clickable="true"
        android:dropDownWidth="wrap_content"
        android:focusable="true"
        android:spinnerMode="dropdown" />


    <Button
        android:layout_width="250dp"
        android:layout_height="46dp"
        android:text="SUBMIT"
        android:textSize="28dp"
        android:textColor="#1a1818"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="#62d2a9"
        android:id="@+id/button2"
        android:clickable="true"
        android:onClick="Submit"
        style="@android:style/Animation.Translucent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:enabled="false" />


</LinearLayout>