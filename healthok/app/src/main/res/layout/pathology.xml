<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck10">


    <EditText
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter Your Name"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_gravity="center_horizontal"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView6"
            android:layout_marginTop="10dp"
            android:onClick=""
            android:background="@drawable/cameraicon"

            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ATTACH TEST SLIP"
                android:textColor="#A7B1FF"
                android:textSize="20dp"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Upload your test slip\n to book for test"
                android:id="@+id/textView7"
                android:textColor="#A7B1FF"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView31" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.91">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginTop="20dp"
                android:textColor="#A7B1FF"
                android:layout_marginLeft="80dp"

                android:text="SELECT DATE OF TEST"

                android:textSize="20dp"
                android:id="@+id/textView5" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/datePicker"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </LinearLayout>



    <Button
        android:layout_width="310dp"
        android:layout_height="46dp"
        android:text="SUBMIT"
        android:textSize="28dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@color/common_plus_signin_btn_text_light_focused"
        android:id="@+id/button2" />

</LinearLayout>